{
  "name": "via-relayer",
  "version": "1.0.0",
  "description": "Via relayer",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "watch": "tsc -w",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "create-db": "ts-node scripts/create-database.ts",
    "typeorm": "typeorm-ts-node-commonjs -d src/database/typeorm.config.ts",
    "migration:generate": "npx typeorm-ts-node-commonjs -d src/database/typeorm.cli.ts migration:run",
    "migration:run": "npx typeorm-ts-node-commonjs -d src/database/typeorm.cli.ts migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/ scripts/",
    "lint:fix": "eslint src/ scripts/ --fix",
    "format": "prettier --write src/ scripts/",
    "format:check": "prettier --check src/ scripts/"
  },
  "keywords": [
    "ethereum",
    "blockchain",
    "websocket",
    "relayer",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/pg": "^8.15.4",
    "async-mutex": "^0.5.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "via-ethers": "https://github.com/vianetwork/via-ethers.git#prerelease",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.25",
    "typeorm-extension": "^3.7.1",
    "winston": "^3.17.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
